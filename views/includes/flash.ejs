<% if (successMsg && successMsg.length) { %>
    <div class="alert alert-success alert-dismissable show fade col-6 offset-md-3" role="alert">
        <%=successMsg%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>
<% if (errorMsg && errorMsg.length) { %>
    <div class="alert alert-danger alert-dismissable show fade col-6 offset-md-3" role="alert">
        <%=errorMsg%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>