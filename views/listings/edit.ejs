<% layout("/layouts/boilerplate") -%>
<head>
  <title><%= list.title %></title>
</head>
<body>
  <h2><%=list.title%></h2>
  <h5>Edit place details</h5>
  <!--This way we can send all data in form of an object-->
  <div class="rows">
    <div class="col-8 offset-2">
      <form
        method="POST"
        action="/listings/<%=list._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-2">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            name="listing[title]"
            value="<%=list.title%>"
            required
          />
          <div class="invalid-feedback">You removed title! Set one please.</div>
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control"
            name="listing[description]"
            rows="2"
            cols="35"
            required
          >
<%=list.description%></textarea
          >
          <div class="invalid-feedback">Description can't be empty</div>
        </div>


        <div class="image-input-container">

          <div class="imagePreview">
            <p>Current image</p>
            <img src="<%=compressedImageUrl%>" alt="Current-images" width="auto" height="130px">
          </div>
          
          <div class="mb-2">
            <label for="image" class="form-label">Add new image</label>
            <input
            type="file"
            class="form-control"
            name="listing[image]"
            />
            <div class="invalid-feedback">There must be an image 📸</div>
          </div>
        </div>
        <div class="mb-2">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            class="form-control"
            name="listing[price]"
            value="<%=list.price%>"
            required
          />
          <div class="invalid-feedback">Don't make it FREE! Set some price please 💵</div>
        </div>
        <div class="mb-2">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            class="form-control"
            name="listing[location]"
            value="<%=list.location%>"
            required
          />
          <div class="invalid-feedback">Missing location, mention it please 📌</div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            class="form-control"
            name="listing[country]"
            value="<%=list.country%>"
            required
          />
          <div class="invalid-feedback">How can we find you without knowing country name? 🥺🌏</div>
        </div>
        <button type="submit" class="btn add-btn">Save</button>
      </form>
    </div>
  </div>
</body>
